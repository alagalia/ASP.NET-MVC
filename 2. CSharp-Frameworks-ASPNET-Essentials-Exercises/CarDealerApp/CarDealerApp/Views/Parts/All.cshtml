@model IEnumerable<CarDealer.Models.ViewModels.AllPartVm>

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Part</h4>
    <p>
        @Html.ActionLink("Create New", "Add")
    </p>
    <hr/>
    <table class="table">
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Supplier</th>
            <th>Modify</th>
        </tr>

        @foreach (var part in Model)
        {
            <tr>
                <td>@part.Name</td>
                <td>@part.Price</td>
                <td>@part.Quantity</td>
                <td>@part.SupplierName</td>
                <td>
                    <a href="/parts/edit/@part.Id" class="btn btn-success">Edit</a>
                    <a href="/parts/delete/@part.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }

    </table>
</div>
<p>
x    @Html.ActionLink("Back to List", "Index")
</p>
