@{ Layout = "~/Views/Shared/_Layout.cshtml"; }
@{
    ViewBag.Title = "Create";
}
<div class="container body-content">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <h4>Add Event</h4>
        <hr />
        <div class="form-horizontal col-md-offset-3 col-md-6">
            
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.Label("Title")
                <input type="text" name="Title" class="form-control"/>
            </div>

            <div class="form-group">
                @Html.Label("Image")
                @Html.Editor("Image", new { htmlAttributes = new { @class = "form-control" } })
            </div>

            <div class="form-group">
                @Html.Label("Location")
                @Html.Editor("Location", new {htmlAttributes = new {@class = "form-control"}})
            </div>

            <div class="form-group">
                @Html.Label("Event description")
                <br/>
                @Html.TextArea("Description", new { rows=10, style = "width:100%" })
            </div>

            <div class="form-group">
                @Html.Label("YoutubeUrl")
                @Html.Editor("YoutubeUrl", new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="form-group">
                @Html.Action("CategoriesListForCreateEvent")
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-info" />
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to events", "All")
    </div>

</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
